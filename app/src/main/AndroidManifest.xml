<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.checker.slr" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-sdk android:minSdkVersion="8" />
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-feature android:name="android.hardware.camera" />
        <uses-feature android:name="android.hardware.camera.autofocus" />

        <activity
            android:name=".SignInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckerActivity"
            android:label="@string/title_activity_checker" >
        </activity>
        <activity
            android:name=".CheckReservationActivity"
            android:label="@string/title_activity_check_reservation" >
        </activity>

        <activity
            android:name=".ValidateTicketActivity"
            android:label="@string/title_activity_validate_ticket" >
        </activity>
        <activity
            android:name=".db.CameraTestActivity"
            android:label="@string/title_activity_camera_test" >
        </activity>

    </application>

</manifest>
